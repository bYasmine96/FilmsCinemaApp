<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="5dp"
    android:layout_margin="1dp"
    android:elevation="16dp"
    android:background="#FFF"
    android:orientation="vertical"
    android:id="@+id/card_view"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".50"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:id="@+id/nom_salle"
                android:text="@string/nom_salle1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:id="@+id/adresse_salle"
                android:text="@string/adresse_salle1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight=".50"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/id_voir_dans_carte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:gravity="center_horizontal"
                android:text="Voir dans la carte"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:background="@drawable/ic_more_salle" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>